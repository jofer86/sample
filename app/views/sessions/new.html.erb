<% provide(:title, "Log in") %>
<h1 class="title">Log In Now!!</h1>

<%= form_for(:session, url: login_path ) do |f| %>
  <%= f.label :email %>
  <br>
  <%= f.email_field :email %>
  <br>
  <%= f.label :password %>
  <br>
  <%= f.password_field :password%>
  <br>
  <%= f.submit "login", class: "button" %>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>